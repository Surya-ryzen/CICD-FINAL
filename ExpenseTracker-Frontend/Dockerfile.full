# Frontend Dockerfile.full â€” builds and includes full workspace in final image (for debugging)
FROM node:18-alpine AS build
WORKDIR /app
COPY . .
RUN npm ci --silent && npm run build

FROM nginx:stable-alpine
WORKDIR /usr/share/nginx/html
# Copy entire build stage (includes source and dist). Not recommended for production.
COPY --from=build /app /usr/share/nginx/html
EXPOSE 80
CMD ["nginx","-g","daemon off;"]
